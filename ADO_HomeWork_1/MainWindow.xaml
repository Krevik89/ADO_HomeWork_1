<Window x:Class="ADO_HomeWork_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_HomeWork_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Connection Status:" FontWeight="Bold" />
                <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10" Fill="Red" Margin="5,1,0,0"/>
            </StackPanel>
            <Button Content="Connect" Click="Connect_Click"/>
            <Button Content="Disconnect" Click="Disconnect_Click"/>
            <Button Content="Show_All" Click="Button_Show_All"/>
                       
        </StackPanel>
        <ListBox x:Name="ListQuery" 
                 Canvas.Right="300" Canvas.Top="50"
                 Width="300" Height="200"/>
    </Canvas>
</Window>
